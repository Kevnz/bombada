<?xml version="1.0" encoding="utf-8"?>
<manifest
	xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.richtaur.bombada"
	android:versionCode="1"
	android:versionName="1"
>

	<uses-sdk
		android:minSdkVersion="7"
		android:targetSdkVersion="7"
	/>
	<supports-screens
		android:smallScreens="false"
		android:normalScreens="true"
		android:largeScreens="true"
		android:anyDensity="true"
	/>

	<application
    	android:icon="@drawable/appicon"
      	android:label="Bombada"
      	android:name="BombadaApplication"
      	android:debuggable="false"
	>
    	<activity
        	android:name=".BombadaActivity"
            android:label="Bombada"
            android:configChanges="keyboardHidden|orientation"
            android:launchMode="singleTask"
			android:theme="@style/Theme.Titanium"
        >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
		<activity
        	android:name="org.appcelerator.titanium.TitaniumActivity"
        	android:configChanges="keyboardHidden|orientation"
      	/>

<!--
		<provider
			android:authorities="com.richtaur.bombada.titanium"
			android:name="org.appcelerator.titanium.TitaniumContentProvider"
		/>
-->
		<service
			android:name="org.appcelerator.titanium.TitaniumAnalyticsService"
			android:exported="false"
		/>
	</application>
	
	<uses-permission android:name="android.permission.INTERNET"/>
	<uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
	<uses-permission android:name="android.permission.VIBRATE"/>
	
</manifest>
